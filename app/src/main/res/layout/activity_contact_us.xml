<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <include layout="@layout/view_header"/>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_weixin_actiivty_contant_us"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@mipmap/code_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="关注浙商保险微信 , 获取更多理财咨询"
                android:textColor="@color/textColorGray646464"
                android:textSize="11sp"/>
        </LinearLayout>

        <View
            style="@style/line_gray"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_left10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="公司"
                    android:textColor="@color/textColorGray646464"
                    android:textSize="@dimen/textsize_smalle"/>

                <TextView
                    android:id="@+id/tv_company_name_activity_contant_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浙商保险有限公司"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/textsize_smalle"/>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="@dimen/margin_left10"
                android:layout_marginRight="@dimen/margin_left10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_left10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="地址"
                    android:textColor="@color/textColorGray646464"
                    android:textSize="@dimen/textsize_smalle"/>

                <TextView
                    android:id="@+id/tv_address_activity_contant_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="郡原公元里13幢5楼"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/textsize_smalle"/>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="@dimen/margin_left10"
                android:layout_marginRight="@dimen/margin_left10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_left10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="邮编"
                    android:textColor="@color/textColorGray646464"
                    android:textSize="@dimen/textsize_smalle"/>

                <TextView
                    android:id="@+id/tv_post_code_activity_contant_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="450000"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/textsize_smalle"/>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="@dimen/margin_left10"
                android:layout_marginRight="@dimen/margin_left10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_left10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="客服电话"
                    android:textColor="@color/textColorGray646464"
                    android:textSize="@dimen/textsize_smalle"/>

                <TextView
                    android:id="@+id/tv_support_line_phone_num_activity_contant_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0571-8485361"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/textsize_smalle"/>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="@dimen/margin_left10"
                android:layout_marginRight="@dimen/margin_left10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_left10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="公司电话"
                    android:textColor="@color/textColorGray646464"
                    android:textSize="@dimen/textsize_smalle"/>

                <TextView
                    android:id="@+id/tv_company_num_activity_contant_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0571-64959858"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/textsize_smalle"/>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="@dimen/margin_left10"
                android:layout_marginRight="@dimen/margin_left10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_left10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="官方QQ群"
                    android:textColor="@color/textColorGray646464"
                    android:textSize="@dimen/textsize_smalle"/>

                <TextView

                    android:id="@+id/tv_qq_group_activity_contant_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1854658741"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/textsize_smalle"/>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginLeft="@dimen/margin_left10"
                android:layout_marginRight="@dimen/margin_left10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_left10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="微信号"
                    android:textColor="@color/textColorGray646464"
                    android:textSize="@dimen/textsize_smalle"/>

                <TextView
                    android:id="@+id/tv_weixin_activity_contant_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zheshangbaoxian"
                    android:textColor="#000"
                    android:textSize="@dimen/textsize_smalle"/>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line_gray"
            />


    </LinearLayout>
</ScrollView>