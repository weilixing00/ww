<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@mipmap/top_img">

        <ImageView

            android:id="@+id/iv_back_activity_product_name"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left10"
            android:src="@mipmap/back_btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="产品名称"
            android:textColor="@color/colorPureWhite"
            android:textSize="@dimen/textsize_lage"/>

    </RelativeLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/licai_img"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <LinearLayout

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="预期年化"
                            android:textColor="#fadbdc"
                            android:textSize="@dimen/textsize_smaller"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_left10"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_expect_year_rate_activity_product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="0"
                                android:textColor="#FFF"
                                android:textSize="24sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textColor="#FFF"
                                android:textSize="15sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="募集金额(元)"
                            android:textColor="#fadbdc"
                            android:textSize="@dimen/textsize_smaller"/>

                        <TextView
                            android:id="@+id/tv_collect_money_activity_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_left10"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="22sp"/>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/margin_left10"
                    android:layout_marginTop="18dp"
                    android:background="@mipmap/line_img"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="期限:"
                            android:textColor="#FFF"
                            android:textSize="@dimen/textsize_smaller"/>

                        <TextView
                            android:id="@+id/tv_deadtime_activity_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="@dimen/textsize_smaller"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="天"
                            android:textColor="#FFF"
                            android:textSize="@dimen/textsize_smaller"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="募集期限:"
                            android:textColor="#FFF"
                            android:textSize="@dimen/textsize_smaller"/>

                        <TextView
                            android:id="@+id/tv_collect_deadtime_activity_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="#FFF"
                            android:textSize="@dimen/textsize_smaller"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="天"
                            android:textColor="#FFF"
                            android:textSize="@dimen/textsize_smaller"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d63c3e"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_left10"
                android:paddingLeft="15dp"
                android:paddingTop="@dimen/margin_left10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申购约剩余时间:"
                    android:textColor="#f7d8d9"
                    android:textSize="@dimen/textsize_smaller"/>

                <cn.iwgang.countdownview.CountdownView
                    android:id="@+id/countview_activity_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:isHideTimeBackground="true"
                    app:isShowHour="true"
                    app:isShowMinute="true"
                    app:isShowSecond="true"
                    app:isTimeTextBold="false"
                    app:suffixGravity="center"
                    app:suffixHour="时"
                    app:suffixMinute="分"
                    app:suffixSecond="秒"
                    app:suffixTextColor="#f7d8d9"
                    app:suffixTextSize="@dimen/textsize_smaller"
                    app:timeTextColor="#f7d8d9"
                    app:timeTextSize="@dimen/textsize_common"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起息日期"
                        android:textColor="@color/textColorGray"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tv_start_interest_date_activity_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="2016"
                        android:textColor="@color/textColorBlack"
                        android:textSize="@dimen/textsize_smalle"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:text="剩余金额(元)"
                        android:textColor="@color/textColorGray"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tv_remind_money_activity_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        android:text="0"
                        android:textColor="@color/textColorBlack"
                        android:textSize="14sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到期日期"
                        android:textColor="@color/textColorGray"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tv_expire_date_activity_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="2016"
                        android:textColor="@color/textColorBlack"
                        android:textSize="@dimen/textsize_smalle"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:text="计息方式"
                        android:textColor="@color/textColorGray"
                        android:textSize="11sp"/>

                    <TextView
                        android:id="@+id/tv_interest_type_activity_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        android:text="0"
                        android:textColor="@color/textColorBlack"
                        android:textSize="14sp"/>


                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginTop="10dp"/>

            <View
                style="@style/line_gray"
                android:layout_marginTop="10dp"/>


            <View
                style="@style/line_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#f6f6fb"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/product_img"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="产品概述"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/textsize_smaller13"/>
            </LinearLayout>

            <View
                style="@style/line_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/line_margin_top25"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="13dp"
                    android:background="#ed5959"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="产品介绍"
                    android:textColor="#e6575b"
                    android:textSize="@dimen/textsize_smaller13"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_product_introduce_activity_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="3dp"
                android:text="暗色调是滴哦按时大师的后撒活动欧莎迪欧哈师大都好安山东好哈市都很骚大点 哦年圣诞节"
                android:textColor="#646464"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="13dp"
                    android:background="#ed5959"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="融资方介绍"
                    android:textColor="#e6575b"
                    android:textSize="@dimen/textsize_smaller13"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_financing_introduce_activity_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="3dp"
                android:text="暗色调是滴哦按时大师的后撒活动欧莎迪欧哈师大都好安山东好哈市都很骚大点 哦年圣诞节"
                android:textColor="#646464"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="13dp"
                    android:background="#ed5959"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="发行机构介绍"
                    android:textColor="#e6575b"
                    android:textSize="@dimen/textsize_smaller13"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_issuing_agenecy_introduce_activity_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="3dp"
                android:text="暗色调是滴哦按时大师的后撒活动欧莎迪欧哈师大都好安山东好哈市都很骚大点 哦年圣诞节"
                android:textColor="#646464"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="13dp"
                    android:background="#ed5959"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="增信措施"
                    android:textColor="#e6575b"
                    android:textSize="@dimen/textsize_smaller13"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_add_credit_measure_activity_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="3dp"
                android:text="暗色调是滴哦按时大师的后撒活动欧莎迪欧哈师大都好安山东好哈市都很骚大点 哦年圣诞节"
                android:textColor="#646464"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="3dp"
                android:text="实打实的"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:lineSpacingExtra="3dp"
                android:text="实打实的"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                >

                <LinearLayout
                    android:id="@+id/ll_risk_prompt_activity_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="风险提示"
                        android:textColor="#4691ee"
                        android:textSize="@dimen/textsize_smaller13"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#4691ee"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_disclaimer_announce_activity_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="免责声明"
                        android:textColor="#4691ee"
                        android:textSize="@dimen/textsize_smaller13"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#4691ee"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_product_declare_activity_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="产品说明书"
                        android:textColor="#4691ee"
                        android:textSize="@dimen/textsize_smaller13"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#4691ee"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_calculator_activity_product_name"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@mipmap/calculator_btn"/>

        <Button
            android:id="@+id/bt_subscribe_activity_product_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/btColorLikeRede93030"
            android:gravity="center"
            android:text="立即申购"
            android:textColor="#FFF"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>