<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/view_header"
                android:layout_height="70dp"
                android:layout_width="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/btColorLikeRede93030"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/invitation_line_left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="总资产(元)"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textsize_smaller13"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/invitation_line_right"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_total_capital_fragment_tab3_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="25dp"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    tools:text="200000000000000000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@mipmap/wealth_background1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在投金额(元)"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textsize_smalle"
                    />

                <TextView

                    android:id="@+id/tv_investing_amount_fragment_tab3_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left10"
                    android:text="100"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textsize_smaller13"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:background="@mipmap/wealth_background2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约金额(元)"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textsize_smalle"
                    />

                <TextView
                    android:id="@+id/tv_booking_amount_fragment_tab3_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left10"
                    android:text="1"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textsize_smaller13"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <View
                style="@style/line_gray"
                android:layout_marginTop="@dimen/margin_left10"/>

            <LinearLayout
                android:id="@+id/ll_financing_list_fragment_tab3_bottom"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="理财列表"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/textsize_lage"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/arrow"
                    />
            </LinearLayout>

            <View
                style="@style/line_gray"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="预约列表"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/textsize_lage"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/arrow"
                    />
            </LinearLayout>

            <View
                style="@style/line_gray"/>
        </LinearLayout>
    </ScrollView>

    <!--到时候两张图  带点的信封和不带点的信封-->
    <ImageView
        android:id="@+id/iv_messgage_fragment_tab3_bottom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/margin_left10"
        android:layout_marginRight="@dimen/margin_left10"
        android:src="@mipmap/wealth_tobepaid1"/>
</FrameLayout>