<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bgColor"

              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/view_header"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left10"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/textsize_lagest"
            tools:text="啊速度和"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/textsize_lagest"
            tools:text="-"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/textsize_lagest"
            tools:text="啊速度和"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left10"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预期年化:"
            android:textColor="#000"
            android:textSize="@dimen/textsize_lager"/>

        <TextView
            android:id="@+id/tv_expect_year_rate_activity_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left10"
            android:textColor="#F00"
            android:textSize="@dimen/textsize_lager"
            tools:text="8.37"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="#F00"
            android:textSize="@dimen/textsize_lager"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="期限:"
            android:textColor="#000"
            android:textSize="@dimen/textsize_lager"/>

        <TextView

            android:id="@+id/tv_deadtime_activity_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left10"
            android:textColor="#000"
            android:textSize="@dimen/textsize_lager"
            tools:text="5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textColor="#000"
            android:textSize="@dimen/textsize_lager"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left10"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约量级:"
            android:textColor="#000"
            android:textSize="@dimen/textsize_lager"/>

        <TextView
            android:id="@+id/tv_book_level_activity_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left10"
            android:textColor="#000"
            android:textSize="@dimen/textsize_lager"
            tools:text="8.37"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#000"
            android:textSize="@dimen/textsize_lager"/>
    </LinearLayout>

    <View
        style="@style/line_gray"
        android:layout_marginTop="15dp"/>

    <View
        style="@style/line_gray"
        android:layout_marginTop="@dimen/margin_left10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:padding="@dimen/margin_left10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="预约金额"

            android:textSize="@dimen/textsize_lager"/>

        <EditText
            android:id="@+id/et_book_money_activity_booking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:background="@null"
            android:hint="100,000.00元起购"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_left10"
            android:text="元"
            android:textSize="@dimen/textsize_lager"/>
    </LinearLayout>

    <View
        style="@style/line_gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left10"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_left10"
            android:text="预期本息收益:"
            android:textSize="@dimen/textsize_common"/>

        <TextView
            android:id="@+id/tv_estimate_income_activity_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/textsize_common"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textSize="@dimen/textsize_common"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/bt_sure_booking_activity_booking"
        style="@style/style_bt_red"
        android:text="确认预约"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/margin_left10"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_agree_deal_activity_booking"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="我同意"
            android:textSize="@dimen/textsize_common"/>

        <TextView
            android:id="@+id/tv_deal_activity_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《产品服务协议》"
            android:textSize="@dimen/textsize_common"/>
    </LinearLayout>
</LinearLayout>