<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bgColor"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/view_header"/>

    <View
        style="@style/line_gray_deep"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"

            android:src="@mipmap/phone_img2x"/>

        <EditText
            android:singleLine="true"
            android:inputType="number"
            android:id="@+id/et_phonenum_activity_regist"
            style="@style/style_et_textsize15"
            android:layout_marginLeft="15sp"
            android:hint="注册手机号"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/hintTextColorGraycccccc"/>
    </LinearLayout>

    <View
        style="@style/line_gray"
        android:layout_marginLeft="@dimen/margin_left10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/yanzheng_img2x"/>

        <EditText
            android:singleLine="true"
            android:id="@+id/et_verification_code_activity_regist"
            style="@style/style_et_textsize15"
            android:layout_width="0dp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_weight="1"
            android:hint="短信验证码"
            android:inputType="number"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/hintTextColorGraycccccc"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/lineGray"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/tv_obtain_verification_code_activity_regist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="14sp"
            android:gravity="center_vertical"
            android:text="获取验证码"
            android:textColor="@color/btColorLikeRede93030"/>
    </LinearLayout>

    <View
        style="@style/line_gray"
        android:layout_marginLeft="@dimen/margin_left10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/key_img2x"/>

        <EditText
            android:singleLine="true"

            android:id="@+id/et_login_psw_activity_regist"
            style="@style/style_et_textsize15"
            android:layout_marginLeft="15sp"
            android:hint="设置登录密码(6-16位数字加字母)"
            android:inputType="textPassword"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/hintTextColorGraycccccc"/>
    </LinearLayout>

    <View
        style="@style/line_gray"
        android:layout_marginLeft="@dimen/margin_left10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/key_img2x"/>

        <EditText
            android:singleLine="true"
            android:inputType="textPassword"
            android:id="@+id/et_mekasure_login_psw_activity_regist"
            style="@style/style_et_textsize15"
            android:layout_marginLeft="15sp"
            android:hint="确认密码"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/hintTextColorGraycccccc"/>
    </LinearLayout>

    <View
        style="@style/line_gray"
        android:layout_marginLeft="@dimen/margin_left10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/yaoqing_img2x"/>

        <EditText
            android:id="@+id/et_invite_code_activity_regist"
            style="@style/style_et_textsize15"
            android:layout_marginLeft="15sp"
            android:hint="邀请码(没有可不填)"
            android:singleLine="true"
            android:textColor="@color/textColorBlack"
            android:textColorHint="@color/hintTextColorGraycccccc"/>
    </LinearLayout>

    <View style="@style/line_gray_deep"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/margin_left10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_agree_deal_activity_regist"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/choose_select_btn2x"
            android:padding="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="我已阅读并同意"
            android:textColor="@color/textColorGray646464"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_deal_activity_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《浙商用户协议》"
            android:textColor="@color/textColorBlue"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_regist_activity_regist"
        style="@style/style_bt_red"
        android:layout_marginTop="40dp"
        android:text="免费注册"
        android:textSize="15sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/ll_login_activity_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已是会员，直接登录"
            android:textColor="@color/btColorLikeRede93030"
            android:textSize="13sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#F00"/>
    </LinearLayout>
</LinearLayout>