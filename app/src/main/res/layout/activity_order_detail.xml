<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:fitsSystemWindows="true"
              android:clipToPadding="true"
              android:orientation="vertical">

    <include layout="@layout/view_header"/>

    <View
        style="@style/line_gray"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left10"
        android:layout_marginTop="@dimen/margin_left10"
        android:text="产品名称"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left10"
            android:layout_marginTop="@dimen/margin_left10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left10"
                android:text="状态"
                android:textColor="#000"
                android:textSize="@dimen/textsize_lage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left10"
                android:text="预约本金"
                android:textColor="#000"
                android:textSize="@dimen/textsize_lage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left10"
                android:text="预约利息"
                android:textColor="#000"
                android:textSize="@dimen/textsize_lage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left10"
                android:text="年利率"
                android:textColor="#000"
                android:textSize="@dimen/textsize_lage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left10"
                android:text="计算方式"
                android:textColor="#000"
                android:textSize="@dimen/textsize_lage"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@dimen/margin_left10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status_activity_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left10"
                tools:text="状态"
                android:textColor="#000"
                android:textSize="@dimen/textsize_lage"/>

            <TextView
                android:id="@+id/tv_order_capital_activity_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left10"
                tools:text="预约本金"
                android:textColor="#000"
                android:textSize="@dimen/textsize_lage"/>

            <TextView
                android:id="@+id/tv_interest_activity_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left10"
                tools:text="预约利息"
                android:textColor="#000"
                android:textSize="@dimen/textsize_lage"/>

            <TextView
                android:id="@+id/tv_year_rate_activity_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left10"
                tools:text="年利率"
                android:textColor="#000"
                android:textSize="@dimen/textsize_lage"/>

            <TextView
                android:id="@+id/tv_comput_type_activity_order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_left10"
                tools:text="计算方式"
                android:textColor="#000"
                android:textSize="@dimen/textsize_lage"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        style="@style/line_gray"/>

    <View
        style="@style/line_gray"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/ll_watch_original_project_activity_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_left10"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="查看原项目"
            android:textSize="@dimen/textsize_lager"
            android:textColor="#000"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/margin_left10"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>
    <View
        style="@style/line_gray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/bt_pay_activity_order_detail"
        android:layout_marginBottom="20dp"
        android:text="支付"
        style="@style/style_bt_red"/>
</LinearLayout>