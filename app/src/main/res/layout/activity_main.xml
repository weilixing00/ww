<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"

              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dfdfdf"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="6dp"
        android:weightSum="4">


        <LinearLayout
            android:id="@+id/ll_tab1_bottom_activity_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab1_bottom_activity_main"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/unselect1_img2x"/>

            <TextView
                android:id="@+id/tv_tab1_bottom_activity_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="推荐"
                android:textColor="@color/textColorGray555555"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab2_bottom_activity_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab2_bottom_activity_main"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/unselect2_img_2x"/>

            <TextView
                android:id="@+id/tv_tab2_bottom_activity_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="理财"
                android:textColor="@color/textColorGray555555"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab3_bottom_activity_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab3_bottom_activity_main"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/unselect3_img2x"/>

            <TextView
                android:id="@+id/tv_tab3_bottom_activity_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="财富"
                android:textColor="@color/textColorGray555555"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab4_bottom_activity_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab4_bottom_activity_main"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/unselect4_img2x"/>

            <TextView
                android:id="@+id/tv_tab4_bottom_activity_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="更多"
                android:textColor="@color/textColorGray555555"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
