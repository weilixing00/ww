<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bgColor"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/view_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="您的安全等级"
            android:textColor="@color/textColorBlack"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_slevel1_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@mipmap/safe_grade1"/>

            <ImageView
                android:id="@+id/iv_slevel2_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@mipmap/safe_grade2"/>

            <ImageView
                android:id="@+id/iv_slevel3_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@mipmap/safe_grade3"/>

            <ImageView
                android:id="@+id/iv_slevel4_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@mipmap/safe_grade4"/>

            <ImageView
                android:id="@+id/iv_slevel5_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@mipmap/safe_grade5"/>

            <ImageView
                android:id="@+id/iv_slevel6_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@mipmap/safe_grade6"/>

            <ImageView
                android:id="@+id/iv_slevel7_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@mipmap/safe_grade7"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line_gray_deep"/>

    <View
        style="@style/line_gray_deep"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/safe_users"/>

            <TextView

                android:id="@+id/tv_account_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:textColor="@color/textColorBlack"
                android:textSize="15sp"
                tools:text="sy2535"/>

        </LinearLayout>

        <View
            style="@style/line_gray_deep"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/safe_loginpassword"/>

            <TextView
                android:id="@+id/tv_login_psw_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="登录密码"
                android:textColor="@color/textColorBlack"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/ll_reset_login_psw_activity_security_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="修改"
                    android:textColor="@color/textColorGray"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/arrow"/>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line_gray_deep"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/safe_password"/>

            <TextView
                android:id="@+id/tv_trade_psw_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="交易密码"
                android:textColor="@color/textColorBlack"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/ll_reset_trade_psw_activity_security_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="重置"
                    android:textColor="@color/textColorGray"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/arrow"/>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line_gray_deep"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/safe_question"/>

            <TextView
                android:id="@+id/tv_question_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:textColor="@color/textColorBlack"
                android:textSize="15sp"
                tools:text="你父亲的姓名？"/>

            <LinearLayout
                android:id="@+id/ll_reset_question_activity_security_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="修改"
                    android:textColor="@color/textColorGray"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/arrow"/>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/line_gray_deep"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/safe_users"/>

            <TextView
                android:id="@+id/tv_username_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:textColor="@color/textColorBlack"
                android:textSize="15sp"
                tools:text="吴**"/>

        </LinearLayout>

        <View
            style="@style/line_gray_deep"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/safe_phone"/>

            <TextView
                android:id="@+id/tv_phone_verification_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="手机认证"
                android:textColor="@color/textColorBlack"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/ll_reset_phone_verificaion_activity_security_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="修改"
                    android:textColor="@color/textColorGray"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/arrow"/>
            </LinearLayout>
        </LinearLayout>


        <View
            style="@style/line_gray_deep"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/safe_phone"/>

            <TextView
                android:id="@+id/tv_email_activity_security_center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:textColor="@color/textColorBlack"
                android:textSize="15sp"
                tools:text="5456411313邮箱"/>

            <LinearLayout
                android:id="@+id/ll_reset_email_activity_security_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="更换邮箱"
                    android:textColor="@color/textColorGray"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/arrow"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line_gray_deep"
        android:layout_marginBottom="20dp"/>
</LinearLayout>