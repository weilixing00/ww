<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="260dp"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="版本更新"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/textsize_common"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:text="浙商保险APP发布新版本了，速来更新体验新的玩法"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/textsize_common"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dbdbdb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel_dialogfragment_version_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textColorGray"
            android:textSize="17sp"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dbdbdb"/>

        <TextView
            android:id="@+id/tv_sure_dialogfragment_version_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/btColorLikeRede93030"
            android:textSize="17sp"/>

    </LinearLayout>
</LinearLayout>