<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:clipToPadding="true"
              android:orientation="vertical">

    <include layout="@layout/view_header"/>

    <View
        style="@style/line_gray"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_left10"
        android:paddingRight="@dimen/margin_left10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/et_identity_num_activity_delete_bankcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left10"
                android:background="@null"
                android:hint="身份证号"
                android:textColorHint="@color/textColorGray"/>
        </LinearLayout>

        <View
            style="@style/line_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/ic_launcher"/>

            <EditText
                android:id="@+id/et_trade_psw_activity_delete_bankcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left10"
                android:background="@null"
                android:hint="交易密码"
                android:textColorHint="@color/textColorGray"/>
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/bt_sure_activity_delete_bankcard"
        style="@style/style_bt_red"
        android:text="确定"
        android:layout_marginBottom="20dp"/>
</LinearLayout>