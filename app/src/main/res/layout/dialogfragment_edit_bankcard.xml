<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="编辑银行卡"
        android:textColor="#000"
        android:textSize="@dimen/textsize_common"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left10"
        android:layout_marginRight="@dimen/margin_left10"
        android:layout_marginTop="8dp"
        android:text="如果要删除银行卡,您需要满足下列条件:"
        android:textColor="#000"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left10"
        android:layout_marginRight="@dimen/margin_left10"
        android:layout_marginTop="8dp"
        android:text="1、该账户没有待回款及未退款的理财产品;"
        android:textColor="#000"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left10"
        android:layout_marginRight="@dimen/margin_left10"
        android:layout_marginTop="8dp"
        android:text="2、一天只能操作解绑/更换两次。"
        android:textColor="#000"/>

    <View
        style="@style/line_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_delete_dialogfragment_edit_bankcard"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="删除"
            android:textColor="#F00"
            android:textSize="@dimen/textsize_lager"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/lineGray"/>
        <TextView
            android:id="@+id/tv_replace_dialogfragment_edit_bankcard"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="更换"
            android:textColor="#F00"
            android:textSize="@dimen/textsize_lager"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>