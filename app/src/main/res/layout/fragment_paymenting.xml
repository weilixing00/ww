<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        style="@style/line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_left10"
        android:paddingLeft="@dimen/margin_left10"
        android:paddingTop="@dimen/margin_left10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title1_fragment_financing_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待收本金"
                android:textColor="#000"
                android:textSize="@dimen/textsize_common"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (元)"
                android:textColor="#000"
                android:textSize="@dimen/textsize_common"/>
            <TextView
                android:id="@+id/tv_wait_capital_fragment_financing_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left10"
                android:text="0"
                android:textColor="#000"
                android:textSize="@dimen/textsize_common"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title2_fragment_financing_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待收利息"
                android:textColor="#000"
                android:textSize="@dimen/textsize_common"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (元)"
                android:textColor="#000"
                android:textSize="@dimen/textsize_common"/>
            <TextView
                android:id="@+id/tv_wait_interest_fragment_financing_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="0"
                android:textColor="#000"
                android:textSize="@dimen/textsize_common"/>
        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/line_gray"/>

    <com.jude.easyrecyclerview.EasyRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>